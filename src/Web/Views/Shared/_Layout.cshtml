<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ben's demo app</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles/styles.dist.css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/react/polyfill.dist.js"></script>
    <script src="~/Scripts/react/common.dist.js"></script>
</head>
<body class="page-background">
    <div class="background-overlay"></div>
    <div class="page-container">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-background">
                <div class=""></div>
                <div class="container">
                    <div id="main-navbar-header" class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Ben's Full Stack Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Guestbook", "Index", "Guestbook")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <div class="footer-container">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Ben's Full Stack Project</p>
                </footer>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
